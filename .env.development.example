# =====================================================
# Server5K - CONFIGURACIÓN DE DESARROLLO
# =====================================================
# Este archivo contiene valores para DESARROLLO LOCAL
# Copia este archivo a .env para trabajar en tu máquina local

# =============== SEGURIDAD =================
# SECRET_KEY: Puedes usar una clave fija para desarrollo
SECRET_KEY=django-insecure-clave-para-desarrollo-solo-no-usar-en-prod

# DEBUG: True para ver errores detallados en desarrollo
DEBUG=True

# ALLOWED_HOSTS: Localhost y tu IP local
ALLOWED_HOSTS=localhost,127.0.0.1

# =============== BASE DE DATOS (OPCIONAL) =================
# OPCIÓN A: PostgreSQL local (recomendado si usas Docker)
POSTGRES_DB=server5k_dev
POSTGRES_USER=server5k_dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SSLMODE=prefer

# OPCIÓN B: SQLite (comentar las líneas de PostgreSQL arriba)
# Para usar SQLite, asegúrate de NO tener ninguna variable POSTGRES_*

# =============== REDIS (OPCIONAL) =================
# Si no usas Redis en desarrollo, el proyecto usará capa en memoria
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# =============== CORS =================
# Orígenes de tu frontend en desarrollo (React, Vue, etc.)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# =============== EMAIL (OPCIONAL) =================
# Para probar emails sin enviar reales, usa:
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Si quieres usar SMTP real en desarrollo, descomenta y configura:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu_email@gmail.com
# EMAIL_HOST_PASSWORD=tu_password
# DEFAULT_FROM_EMAIL=dev@example.com

# =============== LOGGING =================
LOG_DIR=./logs
